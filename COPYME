# hit `ctrl + x` `ctrl + e` in your terminal and paste the following

sudo apt-get update

if ! git --version >/dev/null 2>&1; then
  sudo apt-get install git -y
fi

if [ ! -d ~/.after-install ]; then
  git clone https://github.com/EdgardoArriagada/.after-install ~/.after-install
fi

source ~/.after-install/main.sh

# then save
